// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  credentials  Credentials[]
  secureNotes SecureNotes[]
  cards Cards[]
  wifi Wifi[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Credentials{
  id Int @id @default(autoincrement())
  title String
  url String 
  email String 
  password String
  user Users @relation(fields: [userId], references: [id])
  userId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model SecureNotes{
  id Int @id @default(autoincrement())
  title String  @db.VarChar(50)
  content String @db.VarChar(1000)
  user Users @relation(fields: [userId], references: [id])
  userId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum TypesCards {
  CreditCard
  DebitCard
  both
}

model Cards{
  id Int @id @default(autoincrement())
  number String
  title String @unique  
  printedName String
  cvc String
  expiryDate String
  password String
  isVirtual Boolean
  type TypesCards
  user Users @relation(fields: [userId], references: [id])
  userId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Wifi{
  id Int @id @default(autoincrement())
  title String
  ssid String
  password String
  user Users @relation(fields: [userId], references: [id])
  userId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
